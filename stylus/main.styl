.header
    margin: 50px
    display inline-block
    position: relative
    width: 600px
    // margin-bottom: 50px

.menu 
    position: absolute
    right: 0px
    top: 10px  

.menu li 
    display: inline
    font-size: 15px
    font-weight: 400
    margin: 20px 
    cursor: pointer
    transition: all .2s linear
    &:hover
        color: hsl(35, 77%, 62%)
        font-size: 16px






