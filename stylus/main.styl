body 
    font-family: 'Inter Tight', sans-serif;
    width: auto
    background-color: hsl(36, 100%, 99%)

.app 
    margin: 50px auto
    max-width: 900px
    max-height: 700px
    justify-content: center   

.header
    margin: 20px
    display: flex
    justify-content: space-between
    width: auto
    
.menu li 
    display: inline-block
    font-size: 15px
    font-weight: 400
    margin: 5px 
    cursor: pointer
    transition: all .2s linear
    &:hover
        color: hsl(35, 77%, 62%)
        font-size: 16px

p 
    font-size: .85rem
    color: hsl(233, 8%, 79%)
    font-weight: 400    
    margin-top: 0px
    
// teste com grid

.grid
    display: grid
    grid-gap: 15px
    padding: 5px
    margin: 0px
    transition: all .2s linear

.grupo-1
    grid-column: 1 / span 2
    grid-row: 1
    width: auto
    height: 250px  


.grupo-2
    grid-column: 2 / span 3
    grid-row: 1 / span 2
    background-color: hsl(240, 100%, 5%)
    height 400px
    color: white
    max-width: auto
    padding: 1rem
    
.grupo-2 h2 
    color: hsl(35, 77%, 62%)
    font-size: 3rem
    font-weight: 700
    margin: 0px

.grupo-2 hr  
    margin: 1.5rem 0rem

.grupo-2 h3 
    margin-top: 1rem
    margin-bottom: 0px
    font-size: 1.2rem
    font-weight: 700
    &:hover
        color: hsl(35, 77%, 62%)

.grupo-3
    grid-column: 1
    grid-row: 2
    max-width: 250px
    font-size: 2rem
    position: relative
    top: -40px

.grupo-4
    grid-column: 2
    grid-row: 2
    width: 280px
    position: relative
    left: -300px

button
    background-color: hsl(5, 85%, 63%)
    color: white
    border: none
    font-size: .85rem
    font-weight: 700
    letter-spacing: 5px
    text-transform: uppercase
    margin-top: 1rem
    padding: .85rem 1rem
    transition: all .2s linear
    &:hover
        background-color: hsl(240, 100%, 5%)
        font-size: .9rem
        letter-spacing: 6px
        

.grupo-5 
    height 250px
    max-width: 250px

.retro
    grid-column: 1
    grid-row: 3

.laptop
    grid-column: 2
    grid-row: 3

.gaming
    grid-column: 3
    grid-row: 3

.img-grid
    width: 70px  
    float: left
    margin-right: 10px

h4
    font-size: 2rem
    color: hsl(233, 8%, 79%)

//footer

.footer 
    text-align:center
    padding-bottom: 10px
    margin: 50px 
   
.fa-brands 
    width: 30px
    height: 30px
    display: flex
    justify-content: center
    font-size: 1.3rem
    margin-bottom: 10px
    color: rgb(0, 0, 0)
    border-radius: 50%
    transition: all .2s linear
    cursor: pointer
    align-items: center

.fa-brands:hover
    width: 40px
    color: hsl(35, 77%, 62%)
    font-size: 1.7rem
    border-color: #000
