body 
    width: auto

    font-family 'Inter', sans-serif
    background-color: hsl(36, 100%, 99%)

    
.body 
    margin: 50px auto
    max-width: 1100px
    max-height: 700px
    justify-content: center
    

.header
    margin: 20px
    display: flex
    justify-content: space-between
    width: auto
    
.menu li 
    display: inline-block
    font-size: 15px
    font-weight: 400
    margin: 5px 
    cursor: pointer
    transition: all .2s linear
    &:hover
        color: hsl(35, 77%, 62%)
        font-size: 16px






//corpo do layout

main  
    display: inline-block

.img-lego
    width: auto
    height: 200px  

// texte com grid

.grid
    display: grid
    grid-template-columns: repeat(2, 1fr)
    grid-gap: 20px
    margin: 0px

.grid-img
    display: grid
    grid-template-rows: 100px 60px

.lista
    background-color: hsl(240, 100%, 5%)
    height 400px
    color: white
    max-width: 300px
    
.lista h2 
    color: hsl(35, 77%, 62%)
    font-size: 3rem
    margin: 1rem
    font-weight: 700

.lista hr  
    margin: 1rem

.lista h3 
    margin: 1rem
    font-size: 1.2rem
    font-weight: 400

.lista p 
    margin: 1.2rem
    font-size: 0.5rem

//footer

.footer 
    text-align:center
    padding-bottom: 10px
    margin: 50px 
   


.fa-brands 
    width: 30px
    height: 30px
    display: flex
    justify-content: center
    font-size: 1.3rem
    margin-bottom: 10px
    color: rgb(0, 0, 0)
    border-radius: 50%
    transition: all .2s linear
    cursor: pointer
    align-items: center

.fa-brands:hover
    width: 40px
    color: hsl(35, 77%, 62%)
    font-size: 1.7rem
    border-color: #000
